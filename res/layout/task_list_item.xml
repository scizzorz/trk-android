<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:flow="http://schemas.android.com/apk/res/soofw.trk"
	android:id="@+id/frame"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:measureAllChildren="true"
	android:minHeight="?android:attr/listPreferredItemHeightSmall"
	android:background="@color/task_item_bg"
	>
	<LinearLayout
		android:id="@+id/content"
		android:background="@android:color/transparent"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:minHeight="?android:attr/listPreferredItemHeightSmall"
		android:orientation="vertical"
		android:padding="4dp"
		android:textAppearance="?android:attr/textAppearanceListItemSmall"
		>
		<CheckedTextView
			android:id="@+id/text"
			android:background="@android:color/transparent"
			android:checkMark="?android:attr/listChoiceIndicatorMultiple"
			android:gravity="center_vertical"
			android:layout_height="wrap_content"
			android:layout_margin="0dp"
			android:layout_width="match_parent"
			android:paddingBottom="0dp"
			android:paddingLeft="2dp"
			android:paddingRight="0dp"
			android:paddingTop="0dp"
			android:textColor="@color/task_item_color"
			/>
		<soofw.util.FlowLayout
			android:id="@+id/tags"
			android:background="@android:color/transparent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="0dp"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:padding="0dp"
			flow:horizontalSpacing="4dp"
			flow:verticalSpacing="4dp"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/menu"
		android:background="@color/task_item_divider"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:padding="4dp"
		android:visibility="gone"
		>
		<ImageButton
			android:id="@+id/menu_search"
			android:layout_height="32dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:src="@drawable/search"
			style="?android:attr/borderlessButtonStyle"
			/>
		<ImageButton
			android:id="@+id/menu_now"
			android:layout_height="32dp"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:src="@drawable/now"
			style="?android:attr/borderlessButtonStyle"
			/>
		<ImageButton
			android:id="@+id/menu_tags"
			android:layout_height="32dp"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:src="@drawable/tags"
			style="?android:attr/borderlessButtonStyle"
			/>
		<ImageButton
			android:id="@+id/menu_edit"
			android:layout_height="32dp"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:src="@drawable/edit"
			style="?android:attr/borderlessButtonStyle"
			/>
	</LinearLayout>
</FrameLayout>
