<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:flow="http://schemas.android.com/apk/res/soofw.trk"
	android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    >
	<ListView
		android:id="@+id/drawer"
		android:background="@color/tag_list_bg"
		android:choiceMode="multipleChoice"
		android:divider="@color/tag_item_divider"
		android:dividerHeight="2dp"
		android:layout_gravity="start"
		android:layout_height="match_parent"
		android:layout_width="180dp"
		android:padding="3dp"
		/>
	<LinearLayout
		android:id="@+id/content_frame"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:padding="8dp"
		>
		<FrameLayout
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:layout_width="match_parent"
			>
			<MultiAutoCompleteTextView
				android:id="@+id/omnibar"
				android:hint="@string/omnibar_hint"
				android:imeOptions="actionSend"
				android:inputType="text"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				/>
			<Button
				android:id="@+id/omnibar_clear"
				android:background="@drawable/omnibar_clear"
				android:layout_gravity="right|center_vertical"
				android:layout_height="22dp"
				android:layout_marginRight="8dp"
				android:layout_width="22dp"
				android:onClick="clearSearch"
				android:visibility="gone"
				/>
		</FrameLayout>
		<soofw.util.FlowLayout
			android:id="@+id/filter_layout"
			android:background="@android:color/transparent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_marginTop="0dp"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:padding="0dp"
			flow:horizontalSpacing="4dp"
			flow:verticalSpacing="4dp"
			/>
		<ListView
			android:id="@+id/task_view"
			android:background="@android:color/transparent"
			android:cacheColorHint="@android:color/transparent"
			android:choiceMode="multipleChoice"
			android:divider="@color/task_item_divider"
			android:dividerHeight="2dp"
			android:layout_height="match_parent"
			android:layout_margin="0dp"
			android:layout_width="match_parent"
			android:paddingLeft="2dp"
			/>
	</LinearLayout>
</LinearLayout>
